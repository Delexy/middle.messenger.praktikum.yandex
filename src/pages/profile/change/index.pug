extends ../../../layouts/base.pug

block append variables
  - var userData = [['Почта', 'pochta@yandex.ru', 'email', 'email'], ['Логин', 'ivanivanov', 'login', 'text'], ['Имя', 'Иван', 'first_name', 'text'], ['Фамилия', 'Иванов', 'second_name', 'text'], ['Имя в чате', 'Иван', 'display_name', 'text'], ['Телефон', '+7 (909) 967 30 30', 'phone', 'tel']]

block append styles 
  link(rel="stylesheet" href="/src/pages/profile/style.scss")

block content
  .profile-page 
    a.profile-page__back(href="../index.pug")
      include ../../../imgs/icons/arrow-back.svg
    .profile-page__content
      +photo('Поменять аватар', 'https://i.pinimg.com/236x/14/47/14/144714db6b6c2ee70e77273691de5f50.jpg', true)(alt="Ваш аватар")
      .profile-list.profile-page__data
        each data in userData
          .profile-list__el
            p.profile-list__name= data[0]
            input.profile-list__input(value=data[1] name=data[2] type=data[3] placeholder=data[0])
        +button('Сохранить').profile-page__btn-save

