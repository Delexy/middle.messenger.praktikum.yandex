extends ../../layouts/base.pug

block append variables
  - var userData = [['Почта', 'pochta@yandex.ru'], ['Логин', 'ivanivanov'], ['Имя', 'Иван'], ['Фамилия', 'Иванов'], ['Имя в чате', 'Иван'], ['Телефон', '+7 (909) 967 30 30']]

block append styles 
  link(rel="stylesheet", href="/src/pages/profile/style.scss")

block content
  .profile-page 
    a.profile-page__back(href="../main/index.pug")
      include ../../imgs/icons/arrow-back.svg
    .profile-page__content
      +photo('Поменять аватар', 'https://i.pinimg.com/236x/14/47/14/144714db6b6c2ee70e77273691de5f50.jpg', true)(alt="Ваш аватар")
      p.profile-page__name Иван
      .profile-list.profile-page__data
        each data in userData
          .profile-list__el
            p.profile-list__name= data[0]
            p.profile-list__value= data[1]
      nav.profile-list.profile-page__links
        .profile-list__el
          a(href="./change/index.pug") Изменить данные
        .profile-list__el
          a(href="./changePass/index.pug") Изменить пароль
        .profile-list__el
          a.profile-page__exit(href="../index.pug") Выйти      
