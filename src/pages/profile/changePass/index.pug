extends ../../../layouts/base.pug

block append styles 
  link(rel="stylesheet" href="/src/pages/profile/style.scss")

block content
  .profile-page 
    a.profile-page__back(href="../index.pug")
      include ../../../imgs/icons/arrow-back.svg
    .profile-page__content
      +photo('Поменять аватар', 'https://i.pinimg.com/236x/14/47/14/144714db6b6c2ee70e77273691de5f50.jpg', true)
      .profile-list.profile-page__data
        .profile-list__el
          p.profile-list__name Старый пароль
          input.profile-list__input(value="123123" name='oldPassword' type='password' placeholder="Старый пароль")
        .profile-list__el
          p.profile-list__name Новый пароль
          input.profile-list__input(value="123123" name='newPassword' type='password' placeholder="Новый пароль")
        .profile-list__el
          p.profile-list__name Подтверждение пароль
          input.profile-list__input(value="123123" name='configrm_password' type='password' placeholder="Подтверждение пароля")
        +button('Сохранить').profile-page__btn-save

