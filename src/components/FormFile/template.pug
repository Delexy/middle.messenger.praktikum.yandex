form.form.from-image(class=isModal ? 'form_modal' : '' class=attributes.class id=attributes.id enctype="multipart/form-data")
  if isModal 
    button.form__close(type="button" data-close="true")
  p.form__title= title
  .auth-form__inputs
    | !{FileInput}
    | !{SaveBtn}
    span.form-image__error= errorText
